@page
@model Hackathon.Pages.GameSimulatorModel

@{
    ViewData["Title"] = "Stock Simulator";
}
<style>
    .graph {
        height: 400px;
        width: 400px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 100px 1fr 1fr 1fr;
        grid-template-areas: "title title" "chart chart" "news  leaderboard" "controls controls";
    }

    .leaderboard {
        grid-area: leaderboard;
    }

    .chart {
        grid-area: chart;
        margin-bottom: 10px;
        border-bottom: 1px solid black;
    }

    .controls {
        grid-area: controls;
    }

    .title {
        grid-area: title;
        display:flex;
        justify-content:center;
    }

    .news {
        grid-area: news;
        margin-right: 10px;
    }
</style>
<div class="grid-container container">
    <div class="title">
        <h3>Stock Simulator</h3>
    </div>
    <div class="chart">
        <canvas id="myChart" class="graph"></canvas>
    </div>
    <div class="leaderboard">
        <h2>LeaderBoard</h2>
        <table class="table table-hover table-dark">
            <tr>
                <th>Rank</th>
                <th>Names</th>
                <th>Profit %</th>
                <th>LastUpdateDate</th>
            </tr>
            <tr>
                <td>1</td>
                <td>Alfreds Futterkiste</td>
                <td>150</td>
                <td>@DateTime.Now</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Michell</td>
                <td>100</td>
                <td>@DateTime.Now</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>4</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>5</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>6</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>7</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>8</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>9</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>            
            <tr>
                <td>10</td>
                <td>Richard Alibaba</td>
                <td>30</td>
                <td>@DateTime.Now</td>
            </tr>
        </table>
    </div>
    <div class="news">
        <h2>News</h2>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>News</th>
                </tr>
            </thead>
            <tr>
                <td>20/11/2020</td>
                <td>The stock go up in price</td>
            </tr>
            <tr>
                <td>21/11/2020</td>
                <td>The stock go down in price</td>
            </tr>
            <tr>
                <td>20/11/2020</td>
                <td>The stock remain</td>
            </tr>
        </table>
    </div>
    <div id="controls" class="controls">
        <div class="">
            @if (ViewData["Name"] == null)
            {
                <form method="post">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="Name" />
                    </div>
                    <div class="form-group">
                        <label>Amount:</label>
                        <input type="text" class="form-control" name="Amount" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" style="width:25%;" type="submit" asp-page-handler="Register">Get Started</button>
                    </div>
                </form>
            }
            else
            {
                <form method="post">
                    <div class="form-group">
                        <p>Welcome @ViewData["Name"]</p>
                    </div>
                    <div class="form-group">
                        <label>Stock:</label>
                        <select class="form-control" name="stock" id="stocks">
                            <option value="volvo">Apple</option>
                            <option value="saab">Samsung</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Quantity:</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" style="width:25%;">Buy</button>
                        <button class="btn btn-danger" style="width:25%">Sell</button>
                    </div>
                </form>
            }

        </div>
    </div>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.min.js" integrity="sha512-SuxO9djzjML6b9w9/I07IWnLnQhgyYVSpHZx0JV97kGBfTIsUYlWflyuW4ypnvhBrslz1yJ3R+S14fdCWmSmSA==" crossorigin="anonymous"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');


        var config = {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [{
                    label: 'Apple',
                    fill: false,
                    backgroundColor: 'rgba(41, 241, 195, 1)',
                    borderColor: 'rgba(41, 241, 195, 1)',
                    data: [
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),                     
                    ],
                }, {
                    label: 'Samsung',
                    fill: false,
                    backgroundColor: 'rgba(240, 52, 52)',
                    borderColor: 'rgba(240, 52, 52)',
                    borderDash: [5, 5],
                    data: [
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100),
                        Math.floor(Math.random() * 100), 
                    ],
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Chart.js Line Chart'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Month'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Value'
                        }
                    }]
                }
            }
        };

        window.onload = function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            window.myLine = new Chart(ctx, config);
        };

    </script>

}