<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Oreo McFlurry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/owlcarousel/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/owlcarousel/dist/assets/owl.theme.default.min.css">

    @* Own plugins and styling *@
    <link rel="stylesheet" href="~/lib/calculator/dist/calculator.min.css">
    <link rel="stylesheet" href="~/lib/questionnaire/dist/questionnaire.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg text-capitalize fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" asp-area="" asp-page="/Index">oreo mcFlurry</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-page="budcal">Financial Calculator</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-page="Questions">Investor Personality Test</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-page="GameSimulator">Stock Simulation</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-page="Personalities">Personalities</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - OreoMcFlurry
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/calculator/dist/calculator.js"></script>
    <script src="~/lib/owlcarousel/dist/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/animation.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
